<?xml version="1.0"?>
<mx:HBox xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="init()">
    <mx:List dataProvider="{scanBatches}" labelField="manufacturerLot" height="100%">

    </mx:List>
    <fx:Script><![CDATA[
        import mx.collections.ArrayCollection;
        import mx.controls.Alert;

        import utils.RemoteObjectUtils;

        [Bindable]
        private var scanBatches:ArrayCollection;

        private function init():void {
            RemoteObjectUtils.execute("historyService", "findBatches", function (success:Boolean, data:Object):void {
                if (success) {
                    scanBatches = data as ArrayCollection;
                } else {
                    Alert.show(data.message, '错误');
                }
            })
        }
        ]]></fx:Script>
</mx:HBox>
